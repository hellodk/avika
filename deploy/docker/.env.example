# NGINX Manager Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# Database Configuration
# ============================================

# PostgreSQL (Metadata Store)
POSTGRES_USER=admin
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_DB=nginx_manager

# ClickHouse (Analytics Store)
CLICKHOUSE_DB=nginx_analytics
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# ============================================
# Service Configuration
# ============================================

# Gateway Service
GATEWAY_GRPC_PORT=50051
GATEWAY_HTTP_PORT=8081

# Agent Service
AGENT_HEALTH_PORT=8080

# ============================================
# Kafka/Redpanda Configuration
# ============================================
KAFKA_BROKERS=redpanda:9092

# ============================================
# Connection Strings (Auto-generated from above)
# ============================================
# These are constructed from the variables above
# DB_DSN will be: postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?sslmode=disable
# CLICKHOUSE_ADDR will be: clickhouse:9000
